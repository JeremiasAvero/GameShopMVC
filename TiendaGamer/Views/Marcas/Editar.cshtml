@using TiendaElectronica.Data;
@model MarcaModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="container">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                Editar Marca
            </div>
            <input asp-for="Id" type="hidden" />
            <div class="card-body">
                <form asp-action="Editar" asp-controller="Marcas" method="post">
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input asp-for="Descripcion" type="text" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"> </span>
                    </div>

                    <button type="submit" class="btn btn-dark">Registrar</button>
                    <a asp-action="Listar" class="btn btn-dark" asp-controller="Marcas">Volver a lista</a>
                </form>
            </div>
        </div>
    </div>

</div>
