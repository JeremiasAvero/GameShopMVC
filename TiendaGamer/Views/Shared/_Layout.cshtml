<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TiendaElectronica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TiendaElectronica.styles.css" asp-append-version="true" />
    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/pricing/">
    @*    <link href="/docs/5.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="" style="height: 100%;">
        <div class="sticky-top bg-black w-100">
            <div class=" bg-tertiary border border-top-0 border-end-0 border-start-0 border-bottom-2 border-warning  m-0" style="height: 40px;">
                <div class="col-12 col-md-6 m-auto">
                    <ul class="d-inline-flex flex-row m-auto w-100">
                        <li class="d-inline-flex flex-row m-auto">
                            <img src="~/images/nav_corsair.png " class="img-fluid" />
                        </li>
                        <li class="d-inline-flex flex-row m-auto">
                            <img src="~/images/nav_amd.png" class="img-fluid" />
                        </li>
                        <li class="d-inline-flex flex-row m-auto">
                            <img src="~/images/nav_geforce.png" class="img-fluid" />
                        </li>
                        <li class="d-inline-flex flex-row m-auto">
                            <img src="~/images/nav_intel.png" class="img-fluid" />
                        </li>
                        <li class="d-inline-flex flex-row m-auto">
                            <img src="~/images/nav_logitech.png" class="img-fluid" />
                        </li>
                        <li class="d-inline-flex flex-row m-auto">
                            <img src="~/images/nav_trust.png" class="img-fluid" />
                        </li>
                    </ul>
                </div>

            </div>
            <header class="p-2 text-bg-dark h-25">
                <div class="row">
                    <div class="d-flex flex-wrap align-items-center justify-content-center">
                        <a class="d-inline-flex " href="#">
                            <img src="~/images/logo.jpg" alt="Logo" width="50" height="50" class="d-inline-block align-text-top" />
                        </a>
                        <div class="d-inline-flex flex-row justify-content-center  m-3" style="width: 50%; max-width:600px;">
                            <form class=" w-100 d-flex flex-row m-auto bg-dark m-3" role="search" method="get" asp-action="Listar" asp-controller="Catalogo">
                                <input class="form-control me-2" type="search" placeholder="Buscar..." aria-label="Search" name="filtro" />
                                <button class="btn-sm btn-primary text-white" type="submit">Buscar</button>
                            </form>

                        </div>

                        <div class="text-end">
                            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                                <li>
                                    <a asp-action="Index" asp-controller="Home" class="nav-link  text-white">
                                        <i class="bi bi-house text-white h-100 w-100 m-2"></i>
                                        Inicio
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="Index" asp-controller="Carrito" class="nav-link text-white">
                                        <i class="bi bi-cart3 text-white h-100 w-100"></i>
                                        Carrito
                                    </a>
                                </li>
                                <li class="border border-3 border-top-0 border-bottom-0 border-end-0 border-primary">
                                    <small class="nav-link text-white">
                                        Nuestras redes

                                    </small>
                                </li>
                                <li>
                                    <a class="nav-link text-white">
                                        <i class="bi bi-instagram text-white h-100 w-100"></i>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link text-white">
                                        <i class="bi bi-facebook text-white h-100 w-100"></i>

                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link text-white">
                                        <i class="bi bi-whatsapp text-white h-100 w-100"></i>

                                    </a>

                                </li>
                                <li>
                                    <a class="nav-link text-white">
                                        <i class="bi bi-twitter text-white h-100 w-100"></i>

                                    </a>

                                </li>
                               @* @if (User.IsInRole("2") || User.IsInRole("1"))
                                {
                                    <li>
                                        <a asp-action="Salir" asp-controller="Login" class="btn btn-outline-primary text-decoration-none d-inline-flex flex-row align-items-center text-white">
                                            Cerrar sesion
                                        </a>
                                    </li>
                                }
                                else
                                {
                                <li>
                                    <a asp-action="Login" asp-controller="Login" class="btn btn-outline-primary text-decoration-none d-inline-flex flex-row align-items-center text-white">
                                        Iniciar sesion
                                    </a>
                                </li>
                                    
                                }*@

                            </ul>
                        </div>
                    </div>
                </div>
            </header>
               
        </div>
        <nav class="navbar navbar-expand-xl bg-black" data-bs-theme="dark">
            <form asp-action="Listar" asp-controller="Catalogo" method="get">


                <div class="container-fluid">

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                            <li class="nav-item dropdown btn-sm btn-danger m-2 ">
                                <a class="nav-link active text-white" asp-action="Procesador" asp-controller="ArmaTuPc"> Arma tu pc</a>
                            </li>
                            <li class="nav-item dropdown btn-sm btn-danger m-2 ">

                                <a asp-action="Listar" asp-controller="Catalogo" class="nav-link active text-white"> Todos los productos</a>
                            </li>

                            <li class="nav-item dropdown btn-sm btn-secondary m-2 ">
                                <a class="nav-link active dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Componenetes de pc
                                </a>

                                <ul class="dropdown-menu">
                                    <li><button type="submit" class="dropdown-item" value="microprocesadores" name="filtro">MicroProcesadores</button></li>
                                    <li><button type="submit" class="dropdown-item" value="motherboards" name="filtro">MotherBoards</button></li>
                                    <li><button type="submit" class="dropdown-item" value="placas de video" name="filtro">Placas de video</button></li>
                                    <li><button type="submit" class="dropdown-item" value="memorias ram" name="filtro">Memoria Ram</button></li>
                                    <li><button type="submit" class="dropdown-item" value="coolers" name="filtro">Coolers</button></li>
                                    <li><button type="submit" class="dropdown-item" value="discos solidos" name="filtro">	Discos Solidos (SSD)</button></li>
                                    <li><button type="submit" class="dropdown-item" value="discos rígidos" name="filtro">	Discos RÍgidos (HDD))</button></li>
                                    <li><button type="submit" class="dropdown-item" value="fuentes de alimentacion" name="filtro">Fuentes de alimentación</button></li>
                                    <li><button type="submit" class="dropdown-item" value="gabinete" name="filtro">Gabinetes</button></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown btn-sm btn-secondary m-2">
                                <a class="nav-link active dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Computadoras
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a asp-action="PcArmadas" asp-controller="Catalogo" class="dropdown-item" name="filtro">Pc Gamer</a></li>
                                    <li><button type="submit" class="dropdown-item" value="microprocesadores" name="filtro">Oficina</button></li>
                                    <li><button type="submit" class="dropdown-item" value="microprocesadores" name="filtro">Diseño</button></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown btn-sm btn-secondary m-2">
                                <a class="nav-link  active dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Notebooks
                                </a>
                                <ul class="dropdown-menu">
                                    <li><button type="submit" class="dropdown-item" value="Notebook hogar" name="filtro">Hogar - Diseño 2D</button></li>
                                    <li><button type="submit" class="dropdown-item" value="Notebook gamer" name="filtro">Gaming - Diseño 3D</button></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown btn-sm btn-secondary m-2">
                                <a class="nav-link  active dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Perifericos
                                </a>
                                <ul class="dropdown-menu">
                                    <li><button type="submit" class="dropdown-item" value="mouse" name="filtro">Mouse</button></li>
                                    <li><button type="submit" class="dropdown-item" value="mouse wireless" name="filtro">Mouse Wireless</button></li>
                                    <li><button type="submit" class="dropdown-item" value="teclados" name="filtro">Teclados</button></li>
                                    <li><button type="submit" class="dropdown-item" value="teclados wireless" name="filtro">Teclados Wireless</button></li>
                                    <li><button type="submit" class="dropdown-item" value="auriculares" name="filtro">Auriculares</button></li>
                                    <li><button type="submit" class="dropdown-item" value="auriculares wireless" name="filtro">Auriculares Wireless</button></li>
                                    <li><button type="submit" class="dropdown-item" value="parlantes" name="filtro">Parlantes</button></li>
                                </ul>
                            </li>
                           
                            @if (User.IsInRole("2"))
                            {
                                <li class="nav-item dropdown btn-sm btn-success m-2">
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Administrar
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a asp-action="Listar" asp-controller="Usuarios" class="dropdown-item">Usuarios</a></li>
                                        <li><a asp-action="Listar" asp-controller="Productos" class="dropdown-item">Productos</a></li>
                                        <li><a asp-action="Listar" asp-controller="Marcas" class="dropdown-item">Marcas</a></li>
                                        <li><a asp-action="Listar" asp-controller="Categorias" class="dropdown-item">Categorias</a></li>
                                        <li><a asp-action="Listar" asp-controller="PcArmadas" class="dropdown-item">Pc Armadas</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>

                    </div>
                </div>
            </form>
        </nav>
        <div class="container-fluid min-vh-100">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="row text-white p-5" style="background-color: black;">
            <div class="col d-inline-flex flex-column text-center">
                &copy; 2023 - TiendaElectronica - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

            </div>
            <div class="col d-inline-flex flex-column text-center ">
                <h5> Tenes alguna sugerencia o comentario?</h5>
                <h6> Contactanos!!!</h6>
                <a class="btn-sm btn-dark ">Mensaje</a>

            </div>

            <div class="col d-inline-flex flex-column text-center">
                <h6>Seguinos en nuestras redes!!</h6>
                <ul>
                    <li>Instagram</li>
                    <li>Twitter</li>
                    <li>Facebook</li>
                </ul>

            </div>
            <div class="row">
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    </div>
</body>
</html>
