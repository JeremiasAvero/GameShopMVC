@model UsuarioModel
@{
    ViewData["Title"] = "Loguear";

}


<div class="modal modal-sheet position-static d-block p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin" >
    <div class="modal-dialog " role="document" style="">
        <div class="modal-content rounded-4 shadow" >
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Iniciar sesion</h1>
            </div>

            <div class="modal-body p-5 pt-0 ">
                <form class="" method="post" asp-action="Login" as´p-controller="Login">
                    <div class="form-floating mb-3">
                        <input asp-for="NombreUsuario" class="form-control rounded-3" id="floatingInput" placeholder="Nombre de usuario">
                        <label asp-for="NombreUsuario" class="text-black" for="floatingInput">Usuario</label>
                        <span asp-validation-for="NombreUsuario" class="text-white"> </span>

                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Contraseña">
                        <label asp-for="Password" class="text-black" for="floatingPassword">Contraseña</label>
                        <span asp-validation-for="Password" class="text-white"> </span>

                    </div>
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" asp-for="MantenerActivo" /> Recordar sesión
                        </label>
                    </div>
                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-danger"  type="submit">Ingresar</button>
                    <small class="">¿No tenes una cuenta?</small> <a asp-action="Registrar" asp-controller="Login" class="text-white">Crea tu cuenta</a>
                </form>
            </div>
        </div>
    </div>
</div>

